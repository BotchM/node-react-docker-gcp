CLIENT_IP=$(gcloud compute instances describe asn3-app	\
    --zone=us-west1-a \
    --format='value(networkInterfaces[0].networkIP)')

sudo mysql -uroot -ptest \
    -e "CREATE USER 'test'@'${CLIENT_IP}' IDENTIFIED BY 'test';"

sudo mysql -uroot -ptest -e \
    "GRANT ALL PRIVILEGES ON *.* TO 'test'@'${CLIENT_IP}' \
    IDENTIFIED BY 'test';"

gcloud compute instances delete-access-config asn3-db \
    --access-config-name "External NAT" \
    --zone="us-west1-a"

sudo mysql --host=asn3-db --user=test \
    --password=test -e "SHOW DATABASES;"

docker push gcr.io/${PROJECT_ID}/
gcr.io/${PROJECT_ID}/web-app:v1

gcloud compute firewall-rules create "mysql-remote-access" \
    --allow tcp:3306 --source-tags "asn3-app" \
    --target-tags "asn3-db"